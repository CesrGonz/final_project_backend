generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int   @id   @default(autoincrement())
  name      String
  surname   String?
  email     String  @unique
  password  String
  role      String? // admin  vip   null
  course    String?
  active    Boolean   @default(true)
  accepNotifications Boolean @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt  
  
  //FK
  buy        buy[]

  
}

model Product {
  id            Int   @id   @default(autoincrement())
  title         String
  description   String?
  active        Boolean   @default(true)
  provider  Int
  location      String? 
  published     DateTime @default(now()) // iso8601
  expired       DateTime  // iso8601

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt   

  //FK
  idProvider   Int
  Provider      Provider? @relation(fields: [idProvider], references: [Provid])

  //FK
  buy           buy[]

  
}

model Provider{
  Provid          Int   @id   @default(autoincrement())
  name          String @unique
  description   String?
  direction     String?
  phone         String?
  email         String?
  active        Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt   

  //FK
  products      Product[]
       
}

model buy {
  id            Int   @id   @default(autoincrement())
  idProduct     Int
  idUser        Int
  quantity      Int
  price         Float
  total         Float
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt   

  //FK
  product       Product? @relation(fields: [idProduct], references: [id])
  user          User? @relation(fields: [idUser], references: [id])
}